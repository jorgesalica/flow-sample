{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}

